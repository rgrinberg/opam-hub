PROG = opam-hub
OCAMLFLAGS = -g -bin-annot -thread
USE_OCAMLFIND = true

OCAMLPACKS[] =
  ppx_deriving
  sexplib
  cmdliner
  containers
  stringext
  lwt
  opam-lib
  opam-lib.client
  lwt.unix
  github.unix

.SUBDIRS: src
  FILES = opam_hub
  .DEFAULT: $(OCamlProgram $(PROG), $(FILES))

.merlin: :value: $(OCAMLPACKS)
  section
    chan = $(fopen $@, wb)
    foreach(s => ..., $(subdirs P,.))
      fprintln($(chan),B $s)
      fprintln($(chan),S $s)
    foreach(p => ..., $(OCAMLPACKS))
      fprintln($(chan),PKG $p)
    close($(chan))

opam-hub: src/opam-hub
    ln-or-cp $< $@

.PHONY: clean
clean:
  section
    PRECIOUS = README.md
    protected.PRJ = $(ls R, .)
    TARGETS = $(filter-proper-targets $(protected.PRJ))
    rm -rf $(filter-out $(PRECIOUS),$(TARGETS)) .merlin
    foreach(p => ..., $(protected.PRJ))
      rm $(filter-exists $(find $p -name *.cmt -o -name *.cmti))

.DEFAULT: .merlin opam-hub
